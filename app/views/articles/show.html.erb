<article class="blog-post">
  <h2 class="blog-post-title"><%= @article.title %></h2>
  <p class="blog-post-meta"><%= l(@article.created_at, format: '%B %e, %Y').capitalize %> <%= t 'app.word.by' %> <a href="#">Karine</a> <%= t 'app.word.in' %> <%= @article.category.name %></p>

  <p><%= @article.body %></p>


  <%= link_to t('app.button.back'), root_path, class: 'btn btn-primary' %>
  <%= link_to t('app.button.edit'), edit_article_path(@article), class: 'btn btn-secondary' %>
  <%= link_to t('app.button.destroy'), article_path(@article), method: :delete, data: {confirm: t('app.message.confirm_destroy')}, class: 'btn btn-danger' %>

  <div>
    <h2 class="mt-3"><%= t '.comments' %></h2>
    <%= render @article.comments %>
  </div>

  <div>
    <h3><%= t '.add_comment' %></h3>
    <%= render 'comments/form' %>
  </div>
</article>