<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= comment.created_at.strftime('%B %e, %Y') %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= t 'comments.index.commenter' %>: <%= comment.commenter %></h6>
    <p class="card-text"><%= comment.body %></p>
    <%= link_to t('app.button.destroy'), article_comment_path(@article, comment), method: :delete, data: {confirm: t('app.message.confirm_destroy')}, class: 'btn btn-danger' %>
  </div>
</div>